<Page x:Class="Travel.Button"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Travel"
      mc:Ignorable="d" 
      MinHeight="800" MinWidth="1200" 
      Title="Button">

    <Grid Background="White">

        <StackPanel HorizontalAlignment="Center" Width="548" Height="260" VerticalAlignment="Top" Margin="0,39,0,0">

            <Button Margin="10,110,10,15" MaxWidth="200" MaxHeight="100" Background="#fac716" Click="Button_Click" Content="Туры" Height="30"/>
            <Button Margin="10,10,10,15" MaxWidth="200" MaxHeight="100" Background="#fac716" Click="Button_Click_1" Content="Отели" RenderTransformOrigin="0.5,0.5" Height="30">

            </Button>
        </StackPanel>


    </Grid>
</Page>
